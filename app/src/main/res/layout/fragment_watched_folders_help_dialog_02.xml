<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.watchedFolders.helpDialogScreens.WatchedFoldersHelpDialog02Fragment">

    <TextView
        android:id="@+id/tvText1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/watched_folders_help_dialog_screen02_text1"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/watched_folders_help_dialog_screen02_text2"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/tvText1"
        app:layout_constraintStart_toStartOf="@+id/tvText1"
        app:layout_constraintTop_toBottomOf="@+id/tvText1" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/watched_folders_help_dialog_screen02_text3"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/tvText2"
        app:layout_constraintStart_toStartOf="@+id/tvText2"
        app:layout_constraintTop_toBottomOf="@+id/tvText2" />


</androidx.constraintlayout.widget.ConstraintLayout>