<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.watchedFolders.WatchedFoldersHelpDialog">

    <Button
        android:id="@+id/close_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/watched_folders_help_dialog_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/help_viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/progress_dots_linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/progress_dots_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/close_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/dot1_imageView"
            style="@style/ViewPagerStepDot"
            android:contentDescription="@string/fragment_kindle_email_dot_contentDescription" />

        <ImageView
            android:id="@+id/dot2_imageView"
            style="@style/ViewPagerStepDot"
            android:contentDescription="@string/fragment_kindle_email_dot_contentDescription" />

        <ImageView
            android:id="@+id/dot3_imageView"
            style="@style/ViewPagerStepDot"
            android:contentDescription="@string/fragment_kindle_email_dot_contentDescription" />

        <ImageView
            android:id="@+id/dot4_imageView"
            style="@style/ViewPagerStepDot"
            android:contentDescription="@string/fragment_kindle_email_dot_contentDescription" />

        <ImageView
            android:id="@+id/dot5_imageView"
            style="@style/ViewPagerStepDot"
            android:contentDescription="@string/fragment_kindle_email_dot_contentDescription" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>