<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
    </style>

    <!-- Splash Activity -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Toolbar style -->
    <style name="ToolBar.ActionBar" parent="Theme.AppCompat.Light">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>
    <!-- To change hamburger color -->
    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>
    
    <!-- Radio Buttons -->
    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/btnDisabled</item>
        <item name="colorControlActivated">@color/btnNormal</item>
        <item name="colorControlHighlight">@color/btnNormalPressed</item>
        <item name="android:textColorPrimaryDisableOnly">@color/textRegular</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>
</resources>
